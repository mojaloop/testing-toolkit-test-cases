        {
          "id": 6,
          "meta": {
            "info": "GET Bulk Transfer - PayerFSP"
          },
          "description": "GET Bulk Transfer - PayerFSP",
          "apiVersion": {
            "minorVersion": 1,
            "majorVersion": 1,
            "type": "fspiop",
            "asynchronous": true
          },
