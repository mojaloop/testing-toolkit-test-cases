{
  "name": "P2P Happy Path",
  "test_cases": [
    {
      "id": "Add-account",
      "name": "Add account",
      "fileInfo": {
        "path": "hub/golden_path/e2e_tests/p2p.json"
      },
      "meta": {
        "info": "Add account"
      },
      "requests": [
        {
          "id": "Post-Account",
          "description": "Post Account",
          "apiVersion": {
            "minorVersion": 1,
            "majorVersion": 2,
            "type": "mojaloop_connector_outbound",
            "asynchronous": false,
            "prefix": "/ml-con-out",
            "hostnames": [],
            "specFile": "/opt/app/spec_files/api_definitions/mojaloop_connector_outbound_2.1/api_spec.yaml",
            "callbackMapFile": "/opt/app/spec_files/api_definitions/mojaloop_connector_outbound_2.1/callback_map.json",
            "responseMapFile": "/opt/app/spec_files/api_definitions/mojaloop_connector_outbound_2.1/response_map.json",
            "jsfRefFile": "/opt/app/spec_files/api_definitions/mojaloop_connector_outbound_2.1/mockRef.json",
            "triggerTemplatesFolder": "/opt/app/spec_files/api_definitions/mojaloop_connector_outbound_2.1/trigger_templates"
          },
          "operationPath": "/accounts",
          "path": "/accounts",
          "method": "post",
          "url": "{$inputs.E2ESIM2_OUTBOUND_URL}",
          "body": [
            {
              "idType": "MSISDN",
              "idValue": "{$inputs.E2ESIM2_MSISDN_1}"
            }
          ],
          "tests": {
            "assertions": [
              {
                "id": 1,
                "description": "Status code is 200",
                "exec": [
                  "expect(response.status).to.equal(200)"
                ]
              }
            ]
          }
        }
      ]
    },
    {
      "id": "Send-Money",
      "name": "Send Money",
      "meta": {
        "info": "Objective: Validate successful transaction completion across participant combinations"
      },
      "requests": [
        {
          "id": 1,
          "description": "Send transfer",
          "apiVersion": {
            "minorVersion": 1,
            "majorVersion": 2,
            "type": "mojaloop_connector_outbound",
            "asynchronous": true
          },
          "operationPath": "/transfers",
          "path": "/transfers",
          "method": "post",
          "body": {
            "homeTransactionId": "{$inputs.homeTransactionId}",
            "from": {
              "type": "CONSUMER",
              "idType": "MSISDN",
              "idValue": "{$inputs.E2ESIM1_MSISDN_1}",
              "displayName": "{$inputs.fromFirstName}",
              "firstName": "{$inputs.fromFirstName}",
              "lastName": "{$inputs.fromLastName}",
              "dateOfBirth": "{$inputs.fromDOB}",
              "fspId": "{$inputs.E2ESIM1_NAME}"
            },
            "to": {
              "type": "CONSUMER",
              "idType": "MSISDN",
              "idValue": "{$inputs.E2ESIM2_MSISDN_1}",
              "merchantClassificationCode": "123"
            },
            "amountType": "SEND",
            "currency": "{$inputs.currency}",
            "amount": "{$inputs.amount}",
            "transactionType": "TRANSFER",
            "note": "{$inputs.note}",
            "skipPartyLookup": false
          },
          "params": {
            "Type": "",
            "ID": ""
          },
          "tests": {
            "assertions": [
              {
                "id": 1,
                "description": "Status is 200",
                "exec": [
                  "expect(response.status).to.equal(200)"
                ]
              },
              {
                "id": 2,
                "description": "Current state should be WAITING_FOR_PARTY_ACCEPTANCE",
                "exec": [
                  "expect(response.body.currentState).to.equal('WAITING_FOR_PARTY_ACCEPTANCE')"
                ]
              }
            ]
          },
          "url": "{$inputs.E2ESIM1_OUTBOUND_URL}"
        },
        {
          "id": 2,
          "description": "Accept Party and request Quote",
          "apiVersion": {
            "minorVersion": 1,
            "majorVersion": 2,
            "type": "mojaloop_connector_outbound",
            "asynchronous": false
          },
          "operationPath": "/transfers/{transferId}",
          "path": "/transfers/{$prev.1.response.body.transferId}",
          "method": "put",
          "params": {
            "transferId": "{$prev.1.response.body.transferId}"
          },
          "body": {
            "acceptParty": true
          },
          "disabled": false,
          "tests": {
            "assertions": [
              {
                "id": 1,
                "description": "Status is 200",
                "exec": [
                  "expect(response.status).to.equal(200)"
                ]
              },
              {
                "id": 2,
                "description": "Current state should be WAITING_FOR_QUOTE_ACCEPTANCE",
                "exec": [
                  "expect(response.body.currentState).to.equal('WAITING_FOR_QUOTE_ACCEPTANCE')"
                ]
              }
            ]
          },
          "url": "{$inputs.E2ESIM1_OUTBOUND_URL}"
        },
        {
          "id": 3,
          "description": "Accept Quote and complete transfer",
          "apiVersion": {
            "minorVersion": 1,
            "majorVersion": 2,
            "type": "mojaloop_connector_outbound",
            "asynchronous": false
          },
          "operationPath": "/transfers/{transferId}",
          "path": "/transfers/{$prev.1.response.body.transferId}",
          "method": "put",
          "params": {
            "transferId": "{$prev.1.response.body.transferId}"
          },
          "body": {
            "acceptQuote": true
          },
          "disabled": false,
          "tests": {
            "assertions": [
              {
                "id": 1,
                "description": "Status is 200",
                "exec": [
                  "expect(response.status).to.equal(200)"
                ]
              },
              {
                "id": 2,
                "description": "Current state should be COMPLETED",
                "exec": [
                  "expect(response.body.currentState).to.equal('COMPLETED')"
                ]
              }
            ]
          },
          "url": "{$inputs.E2ESIM1_OUTBOUND_URL}"
        }
      ]
    }
  ]
}